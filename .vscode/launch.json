{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Main (Desktop)",
      "request": "launch",
      "type": "dart",
      "internalConsoleOptions": "openOnSessionStart"
      // There's no flavor for desktop.
    },
    {
      "name": "Main TV (dev Mode)",
      "request": "launch",
      "type": "dart",
      "internalConsoleOptions": "openOnSessionStart",
      "args": ["--flavor", "dev", "--dart-define", "TV_MODE=ON"]
    },
    {
      "name": "Main (dev Mode)",
      "request": "launch",
      "type": "dart",
      "internalConsoleOptions": "openOnSessionStart",
      "args": ["--flavor", "dev"]
    },

    {
      "name": "Main (profile mode)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "profile"
    },
    {
      "name": "Main (release mode)",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release"
    },
    {
      "name": "core",
      "cwd": "packages/core",
      "request": "launch",
      "type": "dart"
    },
    {
      "name": "core (profile mode)",
      "cwd": "packages/core",
      "request": "launch",
      "type": "dart",
      "flutterMode": "profile"
    },
    {
      "name": "core (release mode)",
      "cwd": "packages/core",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release"
    }
  ]
}
